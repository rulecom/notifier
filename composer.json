{
    "name": "rulecom/notifier",
    "type": "library",
    "description": "Send notification via Rule and other providers",
    "keywords": [
        "rulecom",
        "notifier"
    ],
    "homepage": "https://github.com/rulecom/notifier",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthis Stenius",
            "email": "matthis.stenius@rule.se",
            "homepage": "https://rule.se",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "illuminate/support": "~5.1",
        "rulecom/api-wrapper": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0||~5.0",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "RuleCom\\Notifier\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RuleCom\\Notifier\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "phpcbf --standard=psr2 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
